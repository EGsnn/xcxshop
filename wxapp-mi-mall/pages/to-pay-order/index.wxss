.couponsBox {
  padding: 0 30rpx;
  border-top: 1rpx #ddd solid;
  line-height: 80rpx;
    color: #999;
  height: 80rpx;
  box-sizing: border-box;
  width: 750rpx;
  font-size: 24rpx;
}
.couponsBox .btn {
  text-align: right;
  /* color: #e14632; */
  background:  url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat right center;
  background-size: 22rpx auto; 
  padding-right: 40rpx;
}
.layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.6)
}

@keyframes zoomIn {
    0% {
        bottom: -100%;
        transform: scale3d(.8,.8,.8)
    }

    50% {
        bottom: 0;
    
    }

    100% {
        bottom: 0;
      
    }
}

.peisong-way{
    width: 100%;
    background-color: #fff;
    /* margin-bottom: 20rpx; */
}

.popBox {

    position: fixed;
    bottom: -100%;
    animation: 1;
    animation-name: zoomIn;
    animation-duration: 1s;
    animation-fill-mode: both;
    z-index: 1000
}
.peisong-way .row-box{
    width: 720rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 24rpx 0 24rpx 30rpx;
    border-bottom: 1rpx solid #eee;
    text-align: center
}
.peisong-way .close {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #229ffd
}
.peisong-way .row-label{
    font-size: 28rpx;
    color: #000;
}
.peisong-way .right-text{
    font-size: 28rpx;
    color: #666;
    padding-right: 30rpx;
}
.peisong-way .liuyan{
    width: 510rpx;
    font-size: 28rpx;
    text-align: left
}
.goods-info{
    width: 100%;
    background-color: #fff;
    margin-bottom: 120rpx;
    padding-bottom: 24rpx;
}
.goods-info .row-box{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 24rpx 30rpx 12rpx 30rpx;
    font-size: 28rpx;
    color: #000;
}
.goods-info .row-box .right-text{
    text-align: right;
}
.jiesuan-box{
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top:1px solid #eee; 
    background-color: #fff;
    z-index: 999;
}
.jiesuan-box .to-pay-btn{
    width:250rpx;
    text-align: center;
    height: 100%;
    line-height: 100rpx;
    background-color: #e64340;
    font-size:32rpx;
    color:#ffffff;
    border-radius: 0;

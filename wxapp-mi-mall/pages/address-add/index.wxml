<view class="container">
    <form bindsubmit="bindSave">
    <view class="form-box">
        <view class="row-wrap">
            <view class="label">联系人</view>
            <view class="label-right">
                <input name="username" class="input" type="text" placeholder="姓名" value="{{addressData.username}}"/>
            </view>
        </view>
        <view class="row-wrap">
            <view class="label">手机号码</view>
            <view class="label-right">
                <input name="mobile" class="input"  type="number" placeholder="11位手机号码" value="{{addressData.mobile}}"/>
            </view>
        </view>
        <view class="row-wrap" bindtap="selectCity">
            <view class="label">选择地区</view>
            <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
              <view  class="weui-select weui-select_in-select-after">
                {{region[0]}}，{{region[1]}}，{{region[2]}}
              </view>
            </picker>
            <!-- <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange"  value="{{multiIndex}}" range="{{multiArray}}"  range-key="{{'name'}}" >
              <view class="picker">
                {{multiArray[0][multiIndex[0]].name}}，{{multiArray[1][multiIndex[1]].name}}，{{multiArray[2][multiIndex[2]].name}}
              </view>
            </picker> -->

        </view>
        <view class="addr-details">
            <view class="label">详细地址</view>
            <view class="label-right">
                <!--<input class="input" type="text" placeholder="街道门牌信息"/>-->
                <textarea name="address" auto-height placeholder="街道门牌信息"  value="{{addressData.address}}"/>
            </view>
        </view>
        <!-- <view class="row-wrap">
            <view class="label">邮政编号</view>
            <view class="label-right">
                <input name="code" class="input" type="text" value="{{addressData.code}}"/>
            </view>
        </view> -->
    </view>
    <button type="warn" class="save-btn" formType="submit">保存</button>
    <button type="primary" class="save-btn" bindtap="readFromWx">从微信读取</button>
    <!-- <button type="default" class="save-btn" bindtap="deleteAddress" data-id="{{addressData.id}}" wx:if="{{addressData}}">删除该地址</button> -->
    <button type="default" class="cancel-btn" bindtap="bindCancel">取消</button>
    </form>
</view>